<div class="crumbs">
  <ul id="breadcrumbs" class="breadcrumb">
    <li>
      <i class="icon-home"></i>
      <%= link_to "首页", root_path %>
    </li>
    <li class="current">
      <%= link_to "能力标签管理", collection_path %>
    </li>
  </ul>
  <ul class="breadcrumb pull-right">
    <%= link_to new_resource_path, class: 'btn btn-sm btn-info pull-right' do %>
    <i class="icon-plus" style="color:#fff"> 添加新的能力标签 </i>
    <% end %>
  </ul>
</div>

<div class="row">
  <div class="widget box">
    <div class="widget-header">
      <h4><i class="icon-reorder"></i>能力标签列表</h4>
    </div>

    <div class="widget-content">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>编号</th>
            <th>内容</th>
            <th>创建时间</th>
            <th>操作</th>
          </tr>
        </thead>

        <tbody>
          <% @ability_tags.each do |ability_tag| %>
            <tr>
              <td><%= ability_tag.id %></td>
              <td><%= ability_tag.name %></td>
              <td><%= l ability_tag.created_at, format: :long rescue nil %></td>
              <td>
                <%= link_to edit_resource_path(ability_tag) do %>
                  <i class="icon-edit"></i>修改
                <% end %>
                <%= link_to resource_path(ability_tag), method: :delete do %>
                  <i class="icon-trash"></i>删除
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
